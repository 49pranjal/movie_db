<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:paddingEnd="4dp"
    android:paddingStart="4dp">

    <!-- Movie Poster -->
    <ImageView
        android:id="@+id/moviePoster"
        android:layout_width="140dp"
        android:layout_height="210dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Favorite Button -->
    <ImageView
        android:id="@+id/ivFavoriteMovie"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:padding="4dp"
        android:background="@drawable/bg_bookmark_movie"
        app:layout_constraintTop_toTopOf="@id/moviePoster"
        app:layout_constraintStart_toStartOf="@id/moviePoster"
        android:layout_margin="6dp"/>

    <!-- Rating badge -->
    <TextView
        android:id="@+id/movieRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_movie_rating"
        android:paddingHorizontal="6dp"
        android:paddingVertical="2dp"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@id/moviePoster"
        app:layout_constraintEnd_toEndOf="@id/moviePoster"
        android:layout_margin="6dp"/>

    <!-- Title -->
    <TextView
        android:id="@+id/movieTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textStyle="bold"
        android:paddingTop="6dp"
        android:paddingStart="4dp"
        android:paddingEnd="2dp"
        app:layout_constraintTop_toBottomOf="@id/moviePoster"
        app:layout_constraintStart_toStartOf="@id/moviePoster"
        app:layout_constraintEnd_toEndOf="@id/moviePoster"/>

    <!-- Release Year -->
    <TextView
        android:id="@+id/movieYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/light_grey"
        android:paddingTop="2dp"
        android:paddingStart="4dp"
        android:paddingEnd="2dp"
        app:layout_constraintTop_toBottomOf="@id/movieTitle"
        app:layout_constraintStart_toStartOf="@id/moviePoster"/>

</androidx.constraintlayout.widget.ConstraintLayout>
